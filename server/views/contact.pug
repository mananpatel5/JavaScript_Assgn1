extends layout

block content
  .center-contact
      .container
        form(action='action_page.php')
          ul
            li
              label(for='fname') First Name
              input#fname(type='text', name='firstname', placeholder='Your name..')
            li
              label(for='lname') Last Name
              input#lname(type='text', name='lastname', placeholder='Your last name..')
            li
              label(for='rating') Country
              select#rating(name='rating')
                option(value='5-star') 5
                option(value='4-star') 4
                option(value='3-star') 3
                option(value='2-star') 2
                option(value='1-star') 1
            li
              label(for='subject') Subject
              textarea#subject(name='subject', placeholder='Give me feedback here', style='height:200px')
            li
              input(type='submit', value='Submit')
